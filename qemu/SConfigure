def CheckKVM(context):
    src = """
    #include <linux/kvm.h>
    #if !defined(KVM_API_VERSION) || KVM_API_VERSION < 12 || KVM_API_VERSION > 12
    #error Invalid KVM Version
    #endif
    int main() { return 0;}
    """
    res = context.TryRun(src, '.cpp')[0]
    context.Result(res)
    return res
custom_tests['CheckKVM'] = CheckKVM

